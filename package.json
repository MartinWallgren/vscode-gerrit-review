{
    "name": "gerrit-review",
    "displayName": "Gerrit Review",
    "description": "Gerrit code reviews locally.",
    "version": "0.0.1",
    "publisher": "wallgren",
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.loadReview"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Gerrit configuration",
            "properties": {
                "gerrit.host": {
                    "type": ["string", "null"],
                    "default": null,
                    "description": "URI for the Gerrit service."
                }
            }
        },
        "commands": [
            {
                "command": "extension.loadReview",
                "title": "Gerrit: Load Review"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "requests": "^0.2.2"
    },
    "devDependencies": {
        "@types/request": "^2.47.1",
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}